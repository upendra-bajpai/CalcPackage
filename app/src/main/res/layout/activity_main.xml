<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.supernova.geeks.calcpackage.MainActivity">


    <EditText
        android:layout_width="match_parent"
        style="@style/displayShift"
        android:layout_height="wrap_content"
        android:id="@+id/displayShift"
        android:textColor="@color/orange"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:cursorVisible="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayFormula"
        style="@style/displayFormula"

        android:inputType="numberSigned"
        android:textColor="@color/orange"
        android:layout_below="@+id/displayShift"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:cursorVisible="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayResult"
        style="@style/displayResult"
        android:textColor="@color/orange"
        android:layout_below="@+id/displayFormula"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:cursorVisible="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayResult"
        android:layout_centerHorizontal="true"
        >
        <include layout="@layout/inputpad"/>

    </RelativeLayout>


</RelativeLayout>

